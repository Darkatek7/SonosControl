@using SonosControl.DAL.Models
@using Microsoft.JSInterop
@implements IAsyncDisposable
@inject IJSRuntime JSRuntime

@if (_show)
{
    <div class="modal fade show d-block" tabindex="-1" role="dialog" aria-modal="true">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-fullscreen-md-down">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@Title</h5>
                    <button type="button" class="btn-close" @onclick="Close" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    @if (!string.IsNullOrEmpty(ErrorMessage))
                    {
                        <div class="alert alert-danger">@ErrorMessage</div>
                    }

                    <div class="mb-3">
                        <label for="mediaName" class="form-label">Name</label>
                        <input @ref="_nameInput" id="mediaName" type="text" class="form-control" @bind="Name" @bind:event="oninput" placeholder="My favorite playlist" />
                    </div>
                    <div class="mb-3">
                        <label for="mediaUrl" class="form-label">URL</label>
                        <input id="mediaUrl" type="text" class="form-control" @bind="Url" @bind:event="oninput" placeholder="https://..." />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="Close">Cancel</button>
                    <button type="button" class="btn btn-primary" @onclick="HandleSave" disabled="@IsSaveDisabled">
                        Save
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-backdrop fade show"></div>
}

@code {
    private bool _show;
    private ElementReference _nameInput;
    private bool _focusNextRender;
    private bool _bodyScrollLocked;
    private bool _syncBodyLockOnNextRender;

    [Parameter]
    public string? ErrorMessage { get; set; }

    [Parameter]
    public EventCallback OnClose { get; set; }

    [Parameter]
    public EventCallback<(string Name, string Url)> OnSave { get; set; }
    
    public string Name { get; set; } = "";
    public string Url { get; set; } = "";
    public string Title { get; set; } = "Add New Item";

    private bool IsSaveDisabled => string.IsNullOrWhiteSpace(Name) || string.IsNullOrWhiteSpace(Url);

    public void Show(string title)
    {
        Title = title;
        Name = "";
        Url = "";
        _show = true;
        _focusNextRender = true;
        _syncBodyLockOnNextRender = true;
        StateHasChanged();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (_syncBodyLockOnNextRender)
        {
            _syncBodyLockOnNextRender = false;
            await SetBodyScrollLockAsync(_show);
        }

        if (_focusNextRender)
        {
            _focusNextRender = false;
            try
            {
                await _nameInput.FocusAsync();
            }
            catch (Exception)
            {
                // Ignore focus errors (e.g. element not visible)
            }
        }
    }

    private async Task Close()
    {
        _show = false;
        await SetBodyScrollLockAsync(false);
        await OnClose.InvokeAsync();
        StateHasChanged();
    }

    private async Task HandleSave()
    {
        if (IsSaveDisabled) return;

        await OnSave.InvokeAsync((Name, Url));
        
        if (string.IsNullOrEmpty(ErrorMessage))
        {
            await Close();
        }
    }

    private async Task SetBodyScrollLockAsync(bool shouldLock)
    {
        if (_bodyScrollLocked == shouldLock)
        {
            return;
        }

        try
        {
            await JSRuntime.InvokeVoidAsync("window.sonosUi.setBodyScrollLock", shouldLock);
            _bodyScrollLocked = shouldLock;
        }
        catch (JSException)
        {
            // Ignore when JS interop is unavailable.
        }
    }

    public async ValueTask DisposeAsync()
    {
        if (_bodyScrollLocked)
        {
            try
            {
                await JSRuntime.InvokeVoidAsync("window.sonosUi.setBodyScrollLock", false);
            }
            catch (JSException)
            {
                // Ignore.
            }
        }
    }
}
