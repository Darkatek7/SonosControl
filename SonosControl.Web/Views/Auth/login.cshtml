@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            background: linear-gradient(180deg, #000000 0%, #555555 100%);
            color: #e0e0e0;
            font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
            height: 100vh;
            margin: 0;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .login-card {
            background-color: #1e1e1e;
            border-radius: 16px;
            padding: 30px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.5);
            width: 100%;
            max-width: 400px;
        }

        label {
            font-weight: 500;
            margin-bottom: 5px;
        }

        .form-control {
            background-color: #2c2c2c;
            color: #fff;
            border: 1px solid #444;
        }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 0 0.1rem #007bff55;
        }

        .btn-primary {
            background-color: #007bff;
            border: none;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }

        .error-message {
            color: #ff6b6b;
            margin-bottom: 15px;
            text-align: center;
        }

        h2 {
            text-align: center;
            margin-bottom: 25px;
        }
    </style>
</head>
<body>
    <form method="post" action="/auth/login" class="login-card">
        <h2>🔒 Login</h2>

        @if (ViewBag.Error != null)
        {
            <div class="error-message">@ViewBag.Error</div>
            <div class="error-message">@ViewBag.Error</div>
        }

        <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input id="username" name="username" type="text" class="form-control" required autofocus />
        </div>

        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input id="password" name="password" type="password" class="form-control" required />
        </div>

        <div class="form-check mb-3">
            <input id="rememberMe" name="rememberMe" type="checkbox" checked="checked" class="form-check-input" />
            <label for="rememberMe" class="form-check-label">Remember Me</label>
        </div>

        <button type="submit" class="btn btn-primary w-100">Log In</button>
    </form>
</body>
</html>
